<style>
  .div_for_iframe {
    width    : 900px;
    height   : 700px;
    overflow : hidden;
    position : relative;
  }

  .iframe_for_remote_url {
    position : absolute;
    top      : -50px;
    left     : 0;
    width    : 1150px;
    height   : 947px;
  }

  .div_for_inner_iframe {
    width    : 900px;
    height   : 480px;
    overflow : hidden;
    position : relative;
  }

  .iframe_for_inner_page {
    position : absolute;
    top      : -10px;
    left     : -5px;
    width    : 900px;
    height   : 480px;
  }
</style>


<a name="my_works"></a>

